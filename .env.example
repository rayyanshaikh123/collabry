# ==========================================
# Collabry Environment Configuration
# Copy this file to .env and fill in your values
# ==========================================

# ============ DATABASE ============

# MongoDB Atlas connection string (production)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/collabry?retryWrites=true&w=majority

# MongoDB Database name
MONGO_DB=collabry

# Local MongoDB (uncomment if using local instance)
# MONGODB_URI=mongodb://collabry:yourpassword@mongo:27017/collabry?authSource=admin
# MONGO_ROOT_USERNAME=collabry
# MONGO_ROOT_PASSWORD=your_mongodb_root_password

# ============ REDIS ============

# Redis URL (automatically set in docker-compose)
# For Redis Cloud: redis://username:password@redis-endpoint:port
REDIS_URL=redis://redis:6379

# ============ JWT SECRETS ============

# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_ACCESS_SECRET=your_64_character_random_hex_string_here
JWT_REFRESH_SECRET=your_64_character_random_hex_string_here

# ============ AI / LLM SERVICES ============

# OpenAI Configuration
OPENAI_API_KEY=sk-proj-your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini
# OPENAI_BASE_URL=https://api.openai.com/v1  # Optional: for proxies

# Groq (alternative LLM provider)
# GROQ_API_KEY=gsk_your_groq_api_key_here

# Ollama (local LLM - uncomment if using)
# OLLAMA_BASE_URL=http://ollama:11434

# AI Agent Configuration
MAX_AGENT_ITERATIONS=5
USE_REDIS=true

# ============ FRONTEND (Next.js Build-time) ============

# These are baked into the client bundle during build
# For production, use full URLs with https://
NEXT_PUBLIC_API_BASE_URL=http://localhost:5000/api
NEXT_PUBLIC_SOCKET_URL=http://localhost:5000
NEXT_PUBLIC_AI_ENGINE_URL=http://localhost:5000/api/ai

# Production example:
# NEXT_PUBLIC_API_BASE_URL=https://api.yourdomain.com/api
# NEXT_PUBLIC_SOCKET_URL=https://api.yourdomain.com
# NEXT_PUBLIC_AI_ENGINE_URL=https://api.yourdomain.com/api/ai

# ============ PAYMENT GATEWAY ============

# Razorpay
RAZORPAY_KEY_ID=rzp_test_your_key_id
RAZORPAY_KEY_SECRET=your_razorpay_secret
NEXT_PUBLIC_RAZORPAY_KEY_ID=rzp_test_your_key_id

# ============ AUTHENTICATION ============

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com

# ============ EMAIL SERVICE ============

# Gmail SMTP
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_specific_password

# ============ CORS ============

# Allowed origins (comma-separated for multiple)
CORS_ORIGIN=http://localhost:3000,https://yourdomain.com

# ============ CLOUDFLARE TUNNEL (Optional) ============

# For exposing local dev to internet
# CLOUDFLARE_TUNNEL_TOKEN=your_cloudflare_tunnel_token

# ============ ENVIRONMENT ============

NODE_ENV=production

# ============ PORTS (for reference) ============

# These are handled by docker-compose, but listed for clarity
# Frontend: 3000
# Backend: 5000
# AI-Engine: 8000
# Redis: 6379
# MongoDB: 27017 (if local)
# Ollama: 11434 (if local)
